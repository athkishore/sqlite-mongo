{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "#backend": ["./src/backend"],
      "#frontend": ["./src/frontend"],
      "#shared": ["./src/shared"]
    },

    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "types": ["node"],
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["src", "tests"],
}
