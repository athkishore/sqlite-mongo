{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "#src": ["./src"],
      "#query-parser": ["./src/query-parser"],
      "#command-handler": ["./src/command-handler"],
      "#server": ["./src/server"],
      "#sql-generator": ["./src/sql-generator"]
    },

    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "types": ["node"],
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["src", "tests"],
}
